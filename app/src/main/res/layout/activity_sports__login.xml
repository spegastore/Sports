<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEFEE"
    tools:context="com.example.admin.sports.Sports_Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="330dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo"
            android:layout_weight="0.38" />

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:srcCompat="@drawable/sports2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/imageButton_news"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/news1" />
        <ImageButton
            android:id="@+id/imageButton_video"
            android:layout_marginTop="8dp"
            android:layout_width="86dp"
            android:layout_height="57dp"
            android:layout_marginLeft="65dp"
            app:srcCompat="@drawable/ic_video"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/textView_news"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"

            android:text="News" />
        <TextView
            android:id="@+id/textView_video"
            android:layout_marginLeft="95dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text="Video" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"

        android:textAlignment="center"
        android:textStyle="normal"
        android:text="Copyright  Â©  2018  Spega Sports.  All                      Rights Reserved" />

</LinearLayout>
